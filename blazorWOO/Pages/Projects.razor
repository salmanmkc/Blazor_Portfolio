@page "/Projects"

<h1>Projects</h1>
<i>Check out my <a href="http://www.github.com/salmanmkc">GitHub</a></i>
<div style="margin-top: 20px; max-width: 70%; float: left; margin-right: 20px;">
@foreach (var project in projects.projects)
{
    <div style="margin-bottom: 40px">
        <h2 style="margin-bottom: 0px;">@project.Title</h2>
        <p><i>@project.Subtitle</i></p>
        <div style="min-height: 315px; margin-bottom: 0px;">
            @if (project.imageCount > 0)
            {
                if (project.imageCount == 1)
                {
                    if (project.ImagePath.Substring(0, 5) == "https")
                    {
                        <p>
                            <iframe style="float: left; margin-right: 50px;" id="demo" width="560" height="315" src="@project.ImagePath" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            @project.Description
                        </p>
                    }
                    else
                    {
                        <p>
                            <img style="float: left" src="@project.ImagePath" alt="Sound Alert Audio Detected" height="40%" width="40%">
                            @project.Description
                        </p>
                    }
                }

                if (project.imageCount == 2) //might need top go over how I will format this
                {
                    if (project.ImagePath.Substring(0, 5) == "https")
                    {
                        <p>
                            <iframe style="float: left; margin-right: 50px;" id="demo" width="560" height="315" src="@project.ImagePath" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            <img style="float: left; margin-right: 20px" src="@project.SecondaryImagePath" alt="Sound Alert Audio Detected" height="20%" width="20%">
                            @project.Description
                        </p>
                    }
                    else
                    {
                        <p style="word-wrap: break-word">
                            <img style="float: left" src="@project.ImagePath" alt="Sound Alert Audio Detected" height="20%%" width="20%%">
                            <img style="float: left; margin-right: 20px" src="@project.SecondaryImagePath" alt="Sound Alert Audio Detected" height="30%" width="30%">
                            @project.Description
                        </p>
                    }
                }
            }

            @*<hr style="margin-top: 20px" width="95%">
            <hr size="7" noshade>
            <hr width="95%">*@
        </div>
    </div>
}
</div>
<div style="float: left; max-width: 30%; margin-top: 30px;">
    <h1>Get in contact!</h1>
    @foreach (var input in inputsEnum.inputList)
    {
        <input style="width: 100%" type="@input.type" placeholder="@input.placeholder"/>
        <br />
    }
</div>

